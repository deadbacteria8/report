{% extends "card.html.twig" %}
{% block div %}
<h1>drawed cards</h1>
<p>{{ count }}</p>
<div class="cardcontainer">
{% for card in list1 %}
  <div class="card">
    <p {% if card ends with '♥' or card ends with '♦' %}class="red"{% endif %}>{{ card }}</p>
  </div>
{% endfor %}
</div>
<form action="{{ path('draw') }}" method="POST">
    <input type="number" name="value" min="1" max="52" required>
    <button type="submit">Draw</button>
</form>
{% endblock %}

